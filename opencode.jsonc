{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "autoupdate": true,
  "formatter": {
    "rubocop": {
      "disabled": true
    }
  },
  "permission": {
    "bash": {
      "*": "ask",
      "bundle exec rspec *": "allow",
      "find *": "allow",
      "git branch": "allow",
      "git diff": "allow",
      "git log": "allow",
      "git show": "allow",
      "git status": "allow",
      "git": "ask",
      "grep": "allow",
      "ls": "allow",
      "rm *": "deny",
      "rspec *": "allow",
      "test -d *": "allow",
      "test -f *": "allow",
      "which": "allow"
    },
    "edit": "ask",
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "read": {
      "*": "allow",
      "*.env": "ask",
      "*.env.*": "ask",
      "*.env.example": "allow",
      "*.secrets.*": "deny"
    },
    "skill": "allow",
    "task": "ask",
    "todoread": "allow",
    "todowrite": "allow",
    "webfetch": "allow",
    "websearch": "allow",
  }
}
